# Postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=mockuser
DB_PASSWORD=mockpass
DB_NAME=mockdb

# Postgres Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_MAX_LIFETIME=5m

# Auth Service
AUTH_PORT=8081

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Token Settings
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=168h  # 7 days

# Project Service 
PROJECT_PORT=8082
PROJECT_BASE_URL_FORMAT=https://{api_key}.api.mockingcode.com

# Data Service
DATA_PORT=8083
DATA_MAX_DOCS_PER_COLLECTION=500
DATA_DEFAULT_GENERATION_COUNT=10

# Mongo
MONGO_PORT=27017
MONGO_DB=mockingcode
MONGO_TIMEOUT=10s

# Redis
REDIS_URL=localhost:6379
REDIS_PORT=6379

# Gateway
GATEWAY_PORT=8080